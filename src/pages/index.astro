---
import Layout from '../layouts/Layout.astro'

import { profile } from '@/settings'
import { publications } from '@/data/cv'
import ProfilePictures from '@/assets/profile_pictures.jpg'
import Hero from '@/components/ui/Hero.astro'
import Grid from '@/components/ui/Grid.astro'
import ArticleList from '@/components/ui/ArticleList.astro'
import NewsScroll from '@/components/ui/NewsScroll.astro'
import SelectedContributions from '@/components/ui/SelectedContributions.astro'
import NextGen from '@/components/ui/NextGen.astro'
import { selectedContributions } from '@/data/contributions'


const { fullName, title, institute, research_areas } = profile
---

<Layout>
  <section class="flex items-center gap-12 border-b border-base-200 pb-4 mb-2">
    <Hero
      fullName={fullName}
      title={title}
      institute={institute}
      profilePicture={ProfilePictures}
    />
  </section>

  <!-- News (dominant) + Research (sidebar) -->
  <section class="mb-1">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-10 items-start pb-4 mb-2">
      <!-- LEFT: News (3/4 width) -->
      <div class="lg:col-span-9">
        <NewsScroll title="Recent" maxHeightClass="max-h-[24rem]" limit={80} />
      </div>

      <!-- RIGHT: Research (1/4 width) -->
      <div class="lg:col-span-3 lg:sticky lg:top-24">
        <Grid
			gridTitle="Research Areas"
			gridItems={research_areas}
			compact={true}
			maxHeightClass="max-h-56"
		/>
      </div>
    </div>
  </section>

  <SelectedContributions items={selectedContributions} />
  <section class="py-12 border-t border-base-200">
  <NextGen/>
  </section>

  <!-- <section class="py-12 border-t border-base-200">
    <ArticleList
      listTitle="Recent Publications"
      listItems={publications}
    />
  </section> -->
</Layout>
