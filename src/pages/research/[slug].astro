---
import Layout from '../../layouts/Layout.astro';
import { researchAreas } from '../../data/research';
import { profile } from '../../settings';

export async function getStaticPaths() {
  return researchAreas.map((area) => ({
    params: { slug: area.slug },
    props: { area },
  }));
}

const { area } = Astro.props;

const formatAuthors = (authors: string) => {
  return authors.replace(
    profile.author_name, 
    `<span class="text-base-content font-bold underline decoration-primary/30">${profile.author_name}</span>`
  );
};
---

<Layout title={`${area.title} | Research`}>
  <div class="py-16 max-w-6xl mx-auto px-6">
    
    <nav class="mb-12">
      <a href="/" class="group inline-flex items-center text-base-content/50 hover:text-primary transition-colors font-bold uppercase text-[10px] tracking-[0.3em]">
        <span class="mr-2 transform group-hover:-translate-x-1 transition-transform">←</span> Index
      </a>
    </nav>
    
    <header class="mb-20 flex flex-col lg:flex-row gap-12 lg:items-center justify-between">
      <div class="flex-1">
          <h1 class="text-6xl lg:text-7xl font-black mb-6 text-base-content tracking-tighter leading-none">
              {area.title}
          </h1>
          <p class="text-xl text-base-content/60 leading-relaxed font-light max-w-xl border-l-2 border-base-300 pl-6 italic">
              {area.description}
          </p>
      </div>

      <div class="w-56 h-56 bg-slate-950 rounded-[2.5rem] relative overflow-hidden flex items-center justify-center shadow-2xl border-b-8 border-slate-900 shrink-0">
          {area.ui_effect === 'scan' && (
              <>
                <div class="absolute inset-0 bg-gradient-to-b from-transparent via-purple-500/10 to-transparent h-full w-full animate-scan"></div>
                <div class="absolute top-1/2 w-full h-[1px] bg-purple-400 shadow-[0_0_15px_rgba(96,165,250,0.8)] animate-scan"></div>
                <div class="text-purple-500/80 font-mono text-[8px] tracking-[0.4em] uppercase">Analyzing_Manifold</div>
              </>
          )}
          {area.ui_effect === 'pulse' && (
          <>
            <div class="absolute w-24 h-24 bg-teal-500/20 rounded-full animate-ping"></div>
            <div class="absolute w-16 h-16 bg-teal-500/40 rounded-full animate-pulse"></div>
            <div class="absolute w-4 h-4 bg-teal-400 rounded-full shadow-[0_0_15px_rgba(192,132,252,0.8)]"></div>
            <div class="absolute bottom-8 text-teal-400/60 dark:text-teal-300/50 font-mono text-[9px] tracking-[0.3em] uppercase">Anomaly_Detected</div>
          </>
        )}
        {area.ui_effect === 'connect' && (
        <div class="relative w-full h-full flex items-center justify-center scale-90">
            {/* The Latent Core */}
            <div class={`w-3 h-3 bg-green-400 rounded-sm rotate-45 shadow-[0_0_20px_green] z-20 animate-pulse`}></div>
            
            {/* Visual Stream (Vertical Ellipse) */}
            <div class={`absolute w-12 h-40 border-l-2 border-r-2 border-green-500/20 rounded-[50%] animate-[spin_8s_linear_infinite]`}></div>
            
            {/* textual Stream (Horizontal Ellipse) */}
            <div class={`absolute w-40 h-12 border-t-2 border-b-2 border-green-500/30 rounded-[50%] animate-[spin_12s_linear_infinite_reverse]`}></div>
            
            {/* Data Particles (Floating nodes of information) */}
            <div class={`absolute w-1 h-1 bg-green-300 rounded-full animate-ping [margin-top:-60px]`}></div>
            <div class={`absolute w-1 h-1 bg-green-300 rounded-full animate-ping [margin-left:60px] [animation-delay:1s]`}></div>
            
            <div class={`absolute bottom-6 text-green-400/50 font-mono text-[8px] tracking-[0.4em] uppercase font-bold`}>
                Bridging Modalities
            </div>
        </div>
)}
      </div>
    </header>

    <section class="mb-24">
        <h2 class="text-[12px] font-black text-primary mb-8 uppercase tracking-[0.6em]">Scientific Thesis</h2>
        <div class="text-base-content leading-[1.6] text-xl lg:text-xl font-serif italic border-l-4 border-base-300 pl-12 max-w-5xl">
            "{area.content}"
        </div>
    </section>

    <section class="mb-16">
        <h2 class="text-[12px] font-black text-base-content/40 mb-16 uppercase tracking-[0.5em]">Open Challenges</h2>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            {area.challenges.map((c) => (
                <div class="relative p-10 bg-base-200/40 border border-base-300 rounded-[2rem] hover:bg-base-content hover:text-base-100 transition-all duration-300 group overflow-hidden min-h-[220px] flex flex-col justify-center cursor-default">
                    <h4 class="text-[12px] font-black text-base-content group-hover:text-primary mb-0 group-hover:mb-6 uppercase tracking-widest transition-all duration-300 z-10">
                        {c.label}
                    </h4>
                    
                    <div class="max-h-0 opacity-0 group-hover:max-h-[150px] group-hover:opacity-100 transition-all duration-500 ease-in-out z-10">
                        <p class="text-[13px] text-base-100/70 leading-relaxed font-medium">
                            {c.description}
                        </p>
                    </div>

                    <div class="absolute bottom-0 left-0 h-[2px] w-0 bg-primary group-hover:w-full transition-all duration-300 shadow-[0_0_15px_hsl(var(--p))]"></div>
                </div>
            ))}
        </div>
    </section>

    {area.featured_papers && (
        // <section class="pt-24 border-t border-base-200">
            <h2 class="text-[12px] font-black text-base-content/40 mb-16 uppercase tracking-[0.5em]">Key Publications</h2>
            <div class="flex flex-col gap-6">
                {area.featured_papers.map((paper) => (
                    <a href={paper.link} target="_blank" class="group relative flex flex-col md:flex-row items-center gap-8 p-6 bg-base-100 hover:bg-base-200/50 border border-base-200 hover:border-primary/30 rounded-[2rem] transition-all duration-300">
                        
                        <div class="w-full md:w-48 h-32 shrink-0 overflow-hidden rounded-2xl bg-slate-950 relative shadow-inner">
                            <img 
                                src={paper.image} 
                                alt={paper.title}
                                class="w-full h-full object-cover opacity-30 grayscale group-hover:opacity-100 group-hover:grayscale-0 group-hover:scale-110 transition-all duration-700"
                            />
                            <div class="absolute inset-0 bg-gradient-to-t from-slate-950/80 to-transparent opacity-60"></div>
                        </div>
                        
                        <div class="flex-1 min-w-0">
                            <div class="flex flex-wrap items-center gap-3 mb-3">
                                <span class={`text-[10px] font-black text-blue-500 uppercase tracking-[0.2em]`}>
                                  {paper.venue}
                                </span>
                                <span class="w-1 h-1 bg-base-300 rounded-full"></span>
                                <span class="text-[9px] font-bold text-base-content/40 uppercase tracking-widest">
                                    Full Manuscript
                                </span>
                            </div>

                            <h3 class="text-xl font-bold text-base-content group-hover:text-primary transition-colors leading-snug mb-2 tracking-tight">
                                {paper.title}
                            </h3>

                            <p class="text-xs text-base-content/50 leading-relaxed font-medium italic" set:html={formatAuthors(paper.authors)} />
                        </div>

                        <div class="hidden md:flex items-center justify-center w-12 h-12 rounded-full border border-base-300 group-hover:border-primary group-hover:bg-primary group-hover:text-primary-content transition-all duration-300 mr-4">
                            <span class="transform group-hover:translate-x-1 transition-transform text-xl italic">→</span>
                        </div>
                    </a>
                ))}
            </div>
        // </section>
    )}
  </div>
</Layout>

<style>
    @keyframes scan {
        0% { top: 0%; opacity: 0; }
        10% { opacity: 1; }
        90% { opacity: 1; }
        100% { top: 100%; opacity: 0; }
    }
    .animate-scan {
        position: absolute;
        animation: scan 4s cubic-bezier(0.4, 0, 0.6, 1) infinite;
    }
</style>